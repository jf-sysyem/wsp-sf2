{% extends '::empty.html.twig' %}
{% form_theme form 'MetronicAdminBundle::form/empty.html.twig' %}

{% block css %}
<link href="/bundles/wspadmin/css/custom.css" rel="stylesheet" type="text/css"/>
<link href="/bundles/metronicadmin/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block js %}
<script src="/bundles/metronicadmin/plugins/jquery-validation/src/jquery.validate.min.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/jquery-validation/src/additional-methods.min.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.it.js" type="text/javascript"></script>
<script src="/bundles/wspadmin/js/soft.js" type="text/javascript"></script>
<script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/gmaps/gmaps.js" type="text/javascript"></script>
<script src="/bundles/wspacl/js/step{{ step }}.js" type="text/javascript"></script>
<script type="text/javascript" src="{{ url('bazinga_jstranslation_js', { 'domain': 'WSPACL' }) }}"></script>
{% endblock %}

{% block ready_js %}
Step.init();
Translator.locale = 'it'
{% endblock %}

{% block content %}
{% include 'WSPACLBundle:Negozio:form/progress.html.twig' %}
{{ form_start(form) }}
{% include 'WSPACLBundle:Negozio:form/step'~step~'.html.twig' %}
{{ form_widget(form) }}
{{ form_end(form) }}

{% endblock %}
