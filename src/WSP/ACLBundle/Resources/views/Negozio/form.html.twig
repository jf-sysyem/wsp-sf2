{% extends '::empty.html.twig' %}
{% form_theme form 'MetronicAdminBundle::form/empty.html.twig' %}

{% block css %}
{% stylesheets 
    '@EphpUtilityBundle/Resources/public/css/utility.css'
    '@WSPAdminBundle/Resources/public/assetic/css/custom.css'
    '@MetronicAdminBundle/Resources/public/plugins/bootstrap-datepicker/css/datepicker.css'
%}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block js %}
<script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
{% javascripts  
    '@MetronicAdminBundle/Resources/public/plugins/jquery-validation/src/jquery.validate.min.js'
    '@MetronicAdminBundle/Resources/public/plugins/jquery-validation/src/additional-methods.min.js'
    '@MetronicAdminBundle/Resources/public/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js'
    '@MetronicAdminBundle/Resources/public/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.it.js'
    '@WSPAdminBundle/Resources/public/js/soft.js'
    '@MetronicAdminBundle/Resources/public/plugins/gmaps/gmaps.js'
%}  
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}  
<script src="{{asset('/bundles/wspacl/js/step'~step~'.js')}}" type="text/javascript"></script>
<script type="text/javascript" src="{{ url('bazinga_jstranslation_js', { 'domain': 'WSPACL' }) }}"></script>
{% endblock %}

{% block ready_js %}
Translator.locale = 'it'
Step.init();
{% endblock %}

{% block content %}
{% include 'WSPACLBundle:Negozio:form/progress.html.twig' %}
{{ form_start(form) }}
{% include 'WSPACLBundle:Negozio:form/step'~step~'.html.twig' %}
{{ form_widget(form) }}
{{ form_end(form) }}

{% endblock %}
