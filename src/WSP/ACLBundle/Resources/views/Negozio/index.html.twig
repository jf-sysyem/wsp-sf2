{% extends '::base.html.twig' %}

{% block content %}
<div class="page-header">
    <div class="icon">
        <span class="ico-cog"></span>
    </div>
    <h1>Negozio</h1>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="data-fluid">
                <table class="table" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Indirizzo</th>
                            <th>Località</th>
                            <th>Cap</th>
                            <th>Categoria</th>
                            <th>Email</th>
                            <th>Descrizione</th>
                            <th>Telefono</th>
                            <th>Cellulare</th>
                            <th>Fax</th>
                            <th>Sito</th>
                            <th>Ambulante</th>
                            <th width="40" class="TAC">Op.</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.nome }}</td>
                            <td>{{ entity.indirizzo }}</td>
                            <td>{{ entity.localita }}</td>
                            <td>{{ entity.cap }}</td>
                            <td>{{ entity.categoria }}</td>
                            <td>{{ entity.emailNegozio }}</td>
                            <td>{{ entity.descrizione }}</td>
                            <td>{{ entity.telefono }}</td>
                            <td>{{ entity.cellulare }}</td>
                            <td>{{ entity.fax }}</td>
                            <td>{{ entity.sito }}</td>
                            <td width="40" class="no-padding js-ambulante">
                                {% if entity.ambulante %}
                                    Sì
                                {% else %}
                                    No
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('negozio_edit', { 'id': entity.id }) }}">Modifica</a> 
                            </td>
                        </tr>
                    {% endfor %}
                
                
        </tbody>
    </table>

{% endblock %}
