{% extends "::empty.html.twig" %}

{% block css %}
<link href="/bundles/metronicadmin/css/pages/coming-soon.css" rel="stylesheet" type="text/css"/>
<link href="/bundles/wsppromo/css/custom.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block js %}
<script src="/bundles/metronicadmin/plugins/countdown/jquery.countdown.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/scripts/coming-soon.js" type="text/javascript"></script>
<script src="/bundles/wsppromo/js/vertical_bar.js" type="text/javascript"></script>
{% endblock %}
{% block ready_js %}
VerticalBar.init();
ComingSoon.init();
{% endblock %}

{% block precontent %}
<hgroup class="no-display">
    <h1>World Sticker Prize</h1>
    <h2>Il tuo Business è il nostro Business!</h2>
</hgroup>
<div class="header navbar navbar-inverse navbar-fixed-top trasparent">
    <div class="vertical-title">
        <span class="red">W</span>orld <span class="red">S</span>ticker <span class="solid-yellow"><span class="red">P</span>rize<span class="red">
    </div>
</div>
{% endblock %}

{% block content %}
<h3 class="slogan">Il tuo <b>Business</b><br/>è il nostro <b>Business</b></h3>
<div class="testo">
    Qui frase che spiega i motivivi...
    <div id="spot">
        Qui frasi a girare...
    </div>
</div>
<h4 class="slogan">Vuoi più informazioni?<br/>Torna a visitarci, presto saremo<br/><b>On-Line</b></h4>
{% endblock %}

{% block postcontent %}
<div class="content trasparent grassetto">
    Vuoi essere uno dei primi a iscriverti a <b>World Sticker Price</b>?<br/>
    <form class="form-inline" action="#">
            <div class="input-group input-large">
                    <input type="text" class="form-control" placeholder="Scrivi qui la tua email">
                    <span class="input-group-btn">
                    <button class="btn yellow" type="button"><span>Scrivici</span> <i class="m-icon-swapright m-icon-white"></i></button>
                    </span>
            </div>
    </form> e ti contatteremo presto!
</div>
<div class="coming-soon-countdown">
    <div id="defaultCountdown"></div>
</div>
{% endblock %}