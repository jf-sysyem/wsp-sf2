{% extends "::empty.html.twig" %}

{% block css %}
<link href="/bundles/metronicadmin/css/pages/coming-soon.css" rel="stylesheet" type="text/css"/>
<link href="/bundles/ephputility/css/utility.css" rel="stylesheet" type="text/css"/>
<link href="/bundles/wsppromo/css/custom.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block js %}
<script type="text/javascript" src="{{ url('bazinga_jstranslation_js', { 'domain': 'WSPPromo' }) }}"></script>
<script src="/bundles/wspadmin/js/soft.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/jquery-validation/src/jquery.validate.min.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/jquery-validation/src/additional-methods.min.js" type="text/javascript"></script>
<script src="/bundles/metronicadmin/plugins/countdown/jquery.countdown.js" type="text/javascript"></script>
<script src="/bundles/wsppromo/js/coming-soon.js" type="text/javascript"></script>
<script src="/bundles/wsppromo/js/vertical_justify.js" type="text/javascript"></script>
<script src="/bundles/wsppromo/js/contact_form.js" type="text/javascript"></script>
<script src="/bundles/ephputility/js/functions.js" type="text/javascript"></script>
{% endblock %}

{% block ready_js %}
Translator.locale = 'it';
ComingSoon.init();
VerticalJustify.init();
ContactForm.init();
crossfade('block', 12000, 1000, 1);
{% endblock %}

{% block inline_js %}
(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-41259901-6', 'wsprice.it');
  ga('send', 'pageview');
{% endblock %}

{% block precontent %}
<hgroup class="no-display">
    <h1>World Sticker Prize</h1>
    <h2>{{ 'promo.h2'|trans({}, "WSPPromo") }}</h2>
</hgroup>
<div class="header navbar navbar-inverse navbar-fixed-top trasparent">
    <ul class="social-icons margin10">
        <li><a target="_blank" href="https://www.facebook.com/wsprice.it?ref=hl" data-original-title="Facebook" class="social-icon-color facebook"></a></li>
        <li><a target="_blank" href="http://www.youtube.com/watch?v=ZQ1ZaP9CTBg" data-original-title="Youtube" class="social-icon-color youtube"></a></li>
    </ul>
</div>
{% endblock %}

{% block contentcss %}hfix{% endblock %}

{% block content %}
{% for index in range(1, 3, 1) %}
<div id="block-{{ index }}" class="block {% if not loop.first %}no-display{% endif %}" next="block-{% if not loop.last %}{{ index + 1 }}{% else %}1{% endif %}">
    <h3 class="slogan">{{ ('content.frasi.'~index)|trans({}, "WSPPromo")|raw }}</h3>
    <div class="testo">
        <p>{{ ('content.dettagli.'~index)|trans({}, "WSPPromo")|raw }}</p>
    </div>
</div>
{% endfor %}
<h3 class="slogan bottom">{{ ('content.chiusura')|trans({}, "WSPPromo")|raw }}</h3
>
{% endblock %}

{% block postcontent %}
<div class="content grassetto padding10" id="contact" style="margin-top: 10px;">
    {{ 'contact.question'|trans({}, "WSPPromo")|raw }}<br/>
    <form class="form-inline" onsubmit="return false;">
            <div class="input-group input-large">
                    <input id="contact_email" type="email" class="form-control" name="contact" placeholder="{{ 'contact.placeholder'|trans({}, "WSPPromo") }}">
                    <span class="input-group-btn">
                        <button class="btn yellow" id="contact_btn" type="subimt"><span>{{ 'contact.button'|trans({}, "WSPPromo")|raw }}</span> <i class="m-icon-swapright m-icon-black"></i></button>
                    </span>
            </div>
            <div class="input-group input-large">
                <label class="checkbox-inline margin-top-10" for="contact_privacy">
                    <input id="contact_privacy" type="checkbox" name="privacy">
                    <a href="http://www.iubenda.com/privacy-policy/169317" class="iubenda-white no-brand iubenda-embed" title="Privacy Policy">Privacy Policy</a><script type="text/javascript">(function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "http://cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);</script>
                </label>
            </div>
    </form> {{ 'contact.postaction'|trans({}, "WSPPromo")|raw }}
    {#{ 'contact.number'|transchoice(richieste, {'%n%': richieste}, "WSPPromo")|raw }#}
</div>
<div class="coming-soon-countdown no-padding" style="margin-top: 0px;">
    <div id="defaultCountdown"></div>
</div>
{% endblock %}