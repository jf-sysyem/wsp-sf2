{% block title %}{{ messaggio.subject }}{% endblock title %}

{% block content %}
<h2 class="h2">{{ messaggio.subject }}</h2>
<br />
<div class="textdark">
    {% if messaggio.foto %}
    <a href="{% if url('home') != 'http://test.wsprice.it/' %}{{ url('home') }}{% else %}http://www.wsprice.it/{% endif %}">
        <img src="{{ url('home') }}{{ messaggio.foto.urls.url }}" alt="World Sticker Price" title="World Sticker Price" style="max-width: 600px;"/></a>
    <br/>
    <br/>
    {% endif %}
    {{ messaggio.body|nl2br }}
</div>
{% endblock content %}

