{% set page_title = 'Pacchetto crediti' %}
{% set page_subtitle = '<i class="fa fa-money" style="font-size: 2em;"></i>' %}

{% extends '::base.html.twig' %}

{% block js %}
    {% javascripts  
        '@EphpUtilityBundle/Resources/public/js/commons/sugar-1.3.9.min.js'
        '@EphpUtilityBundle/Resources/public/js/functions.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}                
    <script type="text/javascript" src="{{ url('bazinga_jstranslation_js') }}"></script>
{% endblock %}

{% block ready_js %}
Translator.locale = 'it'
{% endblock %}

{% block inline_css %}
div.uploader {
    width: 100% !important;
    background-image: none;
    height: auto;
}
{% endblock %}

{% form_theme form 'MetronicAdminBundle::form/empty.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-4">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-money"></i>Pacchetti crediti</div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
{#
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
#}
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Crediti</th>
                                <th>Prezzo</th>
                                <th>Visibile</th>
                                <th width="40" class="TAC">Op.</th>
                            </tr>
                        <tbody>
                    {% for entity in entities %}
                            <tr>
                                <td>{{ entity.nome }}</td>
                                <td>{{ entity.crediti }}</td>
                                <td>{{ entity.prezzo }} ({{ entity.sconto }})</td>
                                <td width="40" class="no-padding js-visibile">
                                    {% if entity.visibile %}
                                        SI
                                    {% else %}
                                        NO
                                    {% endif %}
                                </td>
                                <td>
                                    <button class="btn yellow btn-xs" onclick="window.location='{{ path('crediti_edit', { 'id': entity.id }) }}';">Modifica</button></a>
                                </td>
                            </tr>
                    {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
    <div class="col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-money"></i>Nuovo pacchetto crediti</div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
{#
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
#}
                </div>
            </div>
            <div class="portlet-body">
                {{ form_start(form) }}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>
{% endblock %}