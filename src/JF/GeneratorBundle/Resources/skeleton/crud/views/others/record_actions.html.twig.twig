<a href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
    <span class="label label-inverse">Torna indietro</span>
</a>

{% if ('edit' in actions) and (not hide_edit) %}
    {% if has_slug %}
    <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'slug': entity.slug }) }}" }}">
    {% else %}
    <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
    {% endif %}
        <span class="label label-warning">Modifica</span>
    </a>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    {{ '{{ form(delete_form) }}' }}
{% endif %}
