{% extends '::base.html.twig' %}
{% form_theme edit_form '::form_aries_layout.html.twig' %}
{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-user"></span>
    </div>
    <h1>Azienda <small>Configurazione</small></h1>
</div>
{{ form_start(edit_form) }}
    <div class="row-fluid">
        <div class="span12">
            <div class="block">
                <div class="head">                                
                    <h2>Dati account</h2>
                </div>                                        
                <div class="data-fluid">
                    {{ form_rest(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{{ form_end(edit_form) }}
<a href="{{ path('index') }}">
    <span class="label label-inverse">Torna indietro</span>
</a>
<script type="text/javascript">
    $('label.required').addClass('label').closest('.row-form').children('.span9').addClass('subform').hide();
    $('label.required').click(function(){
        $('.subform').hide();
        $(this).closest('.row-form').children('.span9').show();
    });
</script>
{% endblock %}
