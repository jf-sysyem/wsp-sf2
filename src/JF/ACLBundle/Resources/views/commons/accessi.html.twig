<div class="row-fluid">
    <div class="head">
        <div class="icon">
            <span class="ico-locked"></span>
        </div>
        <h2>Ultimi accessi</h2>
    </div>
    <div class="block">
        <div class="data-fluid">
            <table cellpadding="0" cellspacing="0" width="100%" class="table lcnp">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>E-mail</th>
                        <th>IP</th>                       
                        <th>Ora</th>                       
                    </tr>
                </thead>
                <tbody>
                    {% for accesso in accessi %}
                        <tr>
                            <td class="padding-3">{{ accesso.user.nome }}</td>
                            <td class="padding-3">{{ accesso.user.email }}</td>
                            <td class="padding-3">{{ accesso.ip }}</td>                      
                            <td class="padding-3">{{ accesso.loggedAt|date('Y-m-d H:i:s') }}</td>                      
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>                            
    </div>
</div>